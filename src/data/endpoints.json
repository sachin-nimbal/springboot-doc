{
  "endpoints": [
    {
      "method": "GET",
      "path": "/api/{entity}",
      "description": "Get all entities with pagination",
      "parameters": [
        {
          "name": "page",
          "type": "integer",
          "description": "Page number (default: 0)"
        },
        {
          "name": "size",
          "type": "integer", 
          "description": "Page size (default: 20)"
        },
        {
          "name": "sort",
          "type": "string",
          "description": "Sort field and direction (e.g., 'name,asc')"
        }
      ],
      "responses": {
        "200": "Paginated list of entities",
        "400": "Invalid parameters"
      }
    },
    {
      "method": "GET",
      "path": "/api/{entity}/{id}",
      "description": "Get entity by ID",
      "parameters": [
        {
          "name": "id",
          "type": "string",
          "description": "Entity identifier"
        }
      ],
      "responses": {
        "200": "Entity details",
        "404": "Entity not found"
      }
    },
    {
      "method": "POST",
      "path": "/api/{entity}",
      "description": "Create new entity",
      "requestBody": {
        "description": "Entity data",
        "required": true
      },
      "responses": {
        "201": "Entity created successfully",
        "400": "Validation error",
        "409": "Entity already exists"
      }
    },
    {
      "method": "PUT",
      "path": "/api/{entity}/{id}",
      "description": "Update existing entity",
      "parameters": [
        {
          "name": "id",
          "type": "string",
          "description": "Entity identifier"
        }
      ],
      "requestBody": {
        "description": "Updated entity data",
        "required": true
      },
      "responses": {
        "200": "Entity updated successfully",
        "400": "Validation error",
        "404": "Entity not found"
      }
    },
    {
      "method": "DELETE",
      "path": "/api/{entity}/{id}",
      "description": "Delete entity by ID",
      "parameters": [
        {
          "name": "id",
          "type": "string",
          "description": "Entity identifier"
        }
      ],
      "responses": {
        "204": "Entity deleted successfully",
        "404": "Entity not found"
      }
    },
    {
      "method": "GET",
      "path": "/api/{entity}/search",
      "description": "Search entities with filters",
      "parameters": [
        {
          "name": "q",
          "type": "string",
          "description": "Search query"
        },
        {
          "name": "filter",
          "type": "string",
          "description": "Filter criteria"
        }
      ],
      "responses": {
        "200": "Filtered list of entities",
        "400": "Invalid search parameters"
      }
    }
  ]
}